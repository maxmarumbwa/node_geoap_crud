<%- include('layout/header') %>
    <div class="container">
        <h1>User List</h1>
        <table border="1">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Image</th>
            </tr>
            <% users.forEach(user=> { %>
                <tr>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.phone %>
                    </td>
                    <td>
                        <img src="/uploads/<%= user.image %>" width="100">
                    </td>
                </tr>
                <% }) %>
        </table>
    </div>
    <%- include('layout/footer') %>